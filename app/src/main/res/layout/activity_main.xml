<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.itheima.recycler.widget.ItheimaRecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorBg" />

            <org.itheima.recycler.header.RecyclerViewHeader
                android:id="@+id/recycler_header"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal|top"
                android:background="@android:color/white">


                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/rectangel_red"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_userIconName_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:paddingBottom="10dp"
                                android:src="@mipmap/icon_alerm_1" />

                            <View
                                android:id="@+id/viewName_1"
                                android:layout_width="45dip"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/iv_userIconName"
                                android:background="@color/colorCursor" />

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="张力"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/textview_zhangli"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="总共0"
                                android:textColor="#fff"
                                android:textSize="12sp"
                                android:typeface="monospace" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/rectangel_yellow"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_userIconName_2"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_centerVertical="true"
                                android:paddingBottom="10dp"
                                android:src="@mipmap/icon_alerm_2" />

                            <View
                                android:id="@+id/viewName_2"
                                android:layout_width="45dip"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/iv_userIconName"
                                android:background="@color/colorCursor" />

                            <TextView
                                android:id="@+id/tv_title_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="脉冲"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/textview_maichong"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="总共220"
                                android:textColor="#fff"
                                android:textSize="12sp"
                                android:typeface="monospace" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/rectangel_zi"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_userIconName_3"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_centerVertical="true"
                                android:paddingBottom="10dp"
                                android:src="@mipmap/icon_alerm_3" />

                            <View
                                android:id="@+id/viewName_3"
                                android:layout_width="45dip"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/iv_userIconName"
                                android:background="@color/colorCursor" />

                            <TextView
                                android:id="@+id/tv_title_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="越界"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/textview_yuejie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="总共0"
                                android:textColor="#fff"
                                android:textSize="12sp"
                                android:typeface="monospace" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/rectangel_blue"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_userIconName_4"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_centerVertical="true"
                                android:paddingBottom="10dp"
                                android:src="@mipmap/icon_alerm_4" />

                            <View
                                android:id="@+id/viewName_4"
                                android:layout_width="45dip"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/iv_userIconName"
                                android:background="@color/colorCursor" />

                            <TextView
                                android:id="@+id/tv_title_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="入侵"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/textview_ruqin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="总共0"
                                android:textColor="#fff"
                                android:textSize="12sp"
                                android:typeface="monospace" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/rectangel_green"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_userIconName_5"
                                android:layout_width="wrap_content"
                                android:layout_height="38dp"
                                android:layout_centerVertical="true"
                                android:paddingBottom="10dp"
                                android:src="@mipmap/icon_alerm_5" />

                            <View
                                android:id="@+id/viewName_5"
                                android:layout_width="45dip"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/iv_userIconName"
                                android:background="@color/colorCursor" />

                            <TextView
                                android:id="@+id/tv_title_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="异常"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/textview_yichang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="总共0"
                                android:textColor="#fff"
                                android:textSize="12sp"
                                android:typeface="monospace" />

                        </LinearLayout>
                    </TableRow>

                </TableLayout>

            </org.itheima.recycler.header.RecyclerViewHeader>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>